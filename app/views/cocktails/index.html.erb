<div class="container">
  <h1 class="my-3">Cocktails</h1>
  <div class="grid-container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-6">
          <%= link_to cocktail_path(cocktail) do %>
            <div class="cocktail-card shadow" style="background-image: linear-gradient(135deg, rgba(255,255,255,.8) 0%, rgba(255,255,255,0) 55%), url(<%= cocktail.imgurl %>); background-size: 'fit';">
              <h3><%= cocktail.name %></h3>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
